begin
prog = irexec
button = OK
config = /usr/local/bin/volumio toggle
end
begin
prog = irexec
button = Volume-Up
config = /usr/local/bin/volumio volume plus
end
begin
prog = irexec
button = Volume-Down
config = /usr/local/bin/volumio volume minus
end
begin
prog = irexec
button = Right
config = /usr/local/bin/volumio next
end
begin
prog = irexec
button = Left
config = /usr/local/bin/volumio previous
end
begin
prog = irexec
button = Up
config = mpc seek +00:00:10
end
begin
prog = irexec
button = Down
config = mpc seek -00:00:10
end
begin
prog = irexec
button = Back
config = mpc repeat on
end
begin
prog = irexec
button = Menu
config = mpc repeat off
end